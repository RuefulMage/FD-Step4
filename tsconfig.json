{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["esnext", "dom", "ES5"],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src/js",
    "outDir": "./dist/js",
    "strictNullChecks": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "jquery",
      "jest"
    ]
  },
  "exclude": [
    "./node_modules"
  ]
}