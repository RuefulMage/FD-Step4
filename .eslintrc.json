{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "extends": [
    "plugin:fsd/all",
    "airbnb-base",
    "plugin:jest/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": "."
  },
  "plugins": ["@typescript-eslint", "fsd", "jest"],
  "rules": {
    "no-unused-vars": "off",
    "import/extensions": 0,
    "import/no-unresolved": 0,
    "semi": "off",
    "class-methods-use-this": ["error", { "exceptMethods": ["update"] }],
    "no-undef": "off",
    "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsForRegex": ["^domElement"] }],
    "fsd/hof-name-prefix": "off"
  }
}